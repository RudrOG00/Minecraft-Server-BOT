# Minecraft Server Configuration
# Replace with your actual Aternos server address (e.g., myserver.aternos.me)
MINECRAFT_HOST=your-server.aternos.me
MINECRAFT_PORT=25565
MINECRAFT_USERNAME=YourBotName
MINECRAFT_PASSWORD=
MINECRAFT_VERSION=
MINECRAFT_AUTH=offline

# Reconnection Settings
MAX_RECONNECT_ATTEMPTS=50
INITIAL_RECONNECT_DELAY=5000
MAX_RECONNECT_DELAY=300000

# Bot Behavior
JOIN_MESSAGE=Bot connected and monitoring server
AFK_MESSAGES=Still here!,Bot active,Keeping server alive,All systems operational
CHAT_RESPONSES=Hello!,I am here!,Bot is active,How can I help?

# Login System Configuration
# Set to true if server uses /register <password> <password> format
REGISTER_DOUBLE_PASSWORD=false
# Set to true if server uses /register <password> format
REGISTER_SINGLE_PASSWORD=false
# The password to use for registration/login
LOGIN_PASSWORD=mypassword123

# Health Server Configuration
HEALTH_SERVER_PORT=5000

# Logging Configuration
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=logs/bot.log